
<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
    <div class="container">
        <br><br>
        <h1 class="header center teal-text text-lighten-2">National Rail API</h1>
        <div class="row center">
            <form class="form-wrapper cf">
                <input type="text" name="searchQuery" id="searchQuery" placeholder="Search here..." required>
                    <button id="submitSearch" type="submit">Search</button>
            </form>

        </div>
    </div>
    <div class="parallax"><img src="img/train.jpg" alt="train"></div>
    </div>

<div class="section no-pad-bot">
    <div class="container">
        <h1 class="header teal-text text-lighten-2">Departure Board</h1>
        <div class="row center">
            <div class="container deptBoard">
                <div class="row">
                    <table class="bordered" id="myTable">
                        <thead>
                            <tr>
                                <th data-field="locName">Origin:</th>
                                <th data-field="destName">Destination</th>
                                <th data-field="schDepartTime">Time:</th>
                                <th data-field="platform">Platform</th>
                                <th data-field="estDepartTime">Expt</th>
                            </tr>
                        </thead>
                        <tbody id="deptTable">
                            <tr>
                                <td>
                                    <div id="loc"></div> 
                                </td>
                                <td> 
                                    <div id="dest"></div>
                                </td>
                                <td>
                                    <div id="sch"></div> 
                                </td>
                                <td> 
                                    <div id="plat"></div>
                                </td>
                                <td>
                                    <div id="est"></div>
                                </td>  
                            </tr>       
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
